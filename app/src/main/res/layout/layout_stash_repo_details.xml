<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardView"
    tools:showIn="@layout/layout_stash_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:text="@string/source"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            style="@style/AppTheme.Divider"
            android:background="@color/colorDivider" />


        <TextView
            android:id="@+id/commits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:text="@string/commits"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            style="@style/AppTheme.Divider"
            android:background="@color/colorDivider" />


        <TextView
            android:id="@+id/branches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:text="@string/branches"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            style="@style/AppTheme.Divider"
            android:background="@color/colorDivider" />


        <TextView
            android:id="@+id/pullRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/icon_pull_requests"
            android:padding="16dp"
            android:text="@string/pullRequests"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            style="@style/AppTheme.Divider"
            android:background="@color/colorDivider" />
    </LinearLayout>
</android.support.v7.widget.CardView>